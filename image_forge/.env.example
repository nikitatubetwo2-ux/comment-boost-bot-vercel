# ImageForge Configuration

# Server Settings
MASTER_HOST=0.0.0.0
MASTER_PORT=8100
MASTER_URL=http://localhost:8100

# Worker Settings
WORKER_ID=worker-1
WORKER_DEVICE=auto  # auto, cuda, mps, cpu

# FLUX Model
FLUX_MODEL=black-forest-labs/FLUX.1-dev
FLUX_DTYPE=float16

# Generation Defaults
DEFAULT_WIDTH=1024
DEFAULT_HEIGHT=1024
DEFAULT_STEPS=28
DEFAULT_GUIDANCE=3.5

# Memory Optimization (for 8GB VRAM GPUs)
ENABLE_CPU_OFFLOAD=true
ENABLE_ATTENTION_SLICING=true
ENABLE_VAE_TILING=true

# Redis (optional, for multi-machine setup)
# REDIS_URL=redis://localhost:6379

# Cloud Fallback (optional)
# REPLICATE_API_KEY=your_key
# FAL_API_KEY=your_key
